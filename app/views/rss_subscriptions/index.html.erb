<h1>RSS Subscriptions</h1>
<div>
  <%= link_to "New Subscription", new_rss_subscription_path %>
</div>
<div id="rss-subscriptions">
  <ul>
    <% @rss_subscriptions.each do |rss_subscription| %>
      <li style="display: flex">
        <span><%= rss_subscription.rss_url.url %></span>
        <%= button_to "Delete",
        rss_subscription,
        method: :delete,
        data: {
          turbo_confirm: "Are you sure?",
        } %>
      </li>
    <% end %>
  </ul>
</div>
